border-radius($amount)
  border-radius: $amount
  -moz-border-radius: $amount
  -ms-border-radius: $amount
  -webkit-border-radius: $amount

box-shadow($params)
  box-shadow: $params
  -moz-box-shadow: $params
  -ms-box-shadow: $params
  -webkit-box-shadow: $params

linear-gradient($first, $second)
  background: $second
  background: -webkit-gradient(linear, left top, left bottom, from($first), to($second))
  background: -moz-linear-gradient(top,  $first,  $second)

custom-list()
  list-style: none
  padding-left: 20px
  > li
    &:before
      content: 'â€¢'
      display: block
      float: left
      margin-left: -15px
  ul
    li
      &:before
        content: '-'

panel()
  $header-bg = #f5f5f5
  $border-color = #ddd

  border: 1px solid $border-color
  border-radius(4px)
  overflow: hidden
  margin-bottom: 20px

  > .header
    background: $header-bg
    padding: 10px
    border-bottom: 1px solid $border-color

  > .content
    padding: 10px

clearfix()
  &:after
    content: "."
    display: block
    clear: both
    visibility: hidden
    line-height: 0
    height: 0
