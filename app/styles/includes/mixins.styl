custom-list()
  list-style: none
  padding-left: 20px

  > li
    &:before
      content: 'â€¢'
      display: block
      float: left
      margin-left: -15px

  ul
    li
      &:before
        content: '-'

panel()
  $header-bg = #f5f5f5
  $border-color = #ddd

  border: 1px solid $border-color
  border-radius: 4px
  overflow: hidden
  margin-bottom: 20px

  > .header
    background: $header-bg
    padding: 10px
    border-bottom: 1px solid $border-color

  > .content
    padding: 10px

clearfix()
  &:after
    content: "."
    display: block
    clear: both
    visibility: hidden
    line-height: 0
    height: 0
