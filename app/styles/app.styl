@import 'includes/mixins'
@import 'includes/support'
@import 'includes/layout'
@import 'includes/typography'

.block
  margin-top: 30px
  padding-top: 30px
  border-top: 3px dashed #ccc
  clearfix()
  > .header
    font-size: 1.2em
    font-weight: bold
    width: 200px
    float: left
  > .content
    float: left
    width: $content-width - 200px
    > .header
      background: #f5f5f5
      border: 1px solid #ddd
      border-radius(2px)
      linear-gradient(#fff, #eee)
      line-height: 20px
      padding: 10px
    > .description
      margin: 20px 0

#skills
  ul
    clearfix()
    list-style: none
    padding: 0
    margin: -5px 0
    li
      float: left
      border: 1px solid #ddd
      background: #ffe
      padding: 2px 10px
      margin: 5px 0
      margin-right: 10px
      border-radius(4px)

#companies
  .header
    .title
      width: 200px
    .position
      color: #333
      font-size: 0.8em
      font-weight: bold
    .period
      font-size: 0.7em
      .total
        margin-right: 10px
        color: #aaa
  .description
    ul
      custom-list()
